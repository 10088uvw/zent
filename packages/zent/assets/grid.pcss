.zent-grid {
  font-size: 12px;
  color: #333;
  position: relative;
  line-height: 1.5;
  overflow: hidden;

  table {
    width: 100%;
    text-align: left;
    border-collapse: separate;
    border-spacing: 0;
  }

  tr {
    display: table-row;
  }

  th,
  td {
    padding: 10px;
    white-space: nowrap;
    display: table-cell;
  }

  th {
    background: #f7f7f7;
    font-weight: bold;
  }
}
